<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <!-- Header -->
    <%- include('../partials/header') %>
      <!-- MAIN -->
      <main class="register__main">
        <section class="register__main__section">
          <div class="register__main__section__titulares">
            <h2>Registrarse</h2>
            <h4>Registrate con tu correo electronico</h4>
          </div>
          <form action="" class="register__main__section__form" method="post">
            <div class="register__form__box">
              <label for="name">Nombre</label>
              <input id="name" type="text" placeholder="Ingresa tu nombre" name="name"
                value="<%= locals.old && old.name ? old.name : null %>" />
              <small style="color:red">
                <%= locals.errors && errors.name ? errors.name.msg : null %>
              </small>
            </div>
            <div class="register__form__box">
              <label for="surname">Apellido</label>
              <input id="surname" type="text" placeholder="Ingresa tu apellido" name="surname"
                value="<%= locals.old && old.surname ? old.surname : null %>" />
              <small style="color:red">
                <%= locals.errors && errors.surname ? errors.surname.msg : null %>
              </small>
            </div>
            <div class="register__form__box">
              <label for="email">Email</label>
              <input type="email" placeholder="Ingresa tu email" id="email" name="email"
                value="<%= locals.old && old.email ? old.email : null %>" />
              <small style="color:red">
                <%= locals.errors && errors.email ? errors.email.msg : null %>
              </small>
            </div>
            <div class="register__form__box">
              <label for="password">Contrase単a</label>
              <input type="password" placeholder="Ingresa tu contrase単a" id="password" name="password" />
              <small style="color:red">
                <%= locals.errors && errors.password ? errors.password.msg : null %>
              </small>
              <button type="button">
                <i class="fa-solid fa-eye"></i>
              </button>
            </div>
            <div class="register__form__box">
              <label for="password2">Repetir contrase単a</label>
              <input type="password" placeholder="Repite tu contrase単a" id="password2" name="password2" />
              <small style="color:red">
                <%= locals.errors && errors.password2 ? errors.password2.msg : null %>
              </small>
              <button type="button">
                <i class="fa-solid fa-eye"></i>
              </button>
            </div>
            <div class="register__button">
              <button type="submit" class="boton__general">Registrarse</button>
            </div>
            <div class="register__socialmedia">
              <h4>O registrate con:</h4>
              <button href=""><i class="fa-brands fa-google"></i>Google</button>
              <button href="">
                <i class="fa-brands fa-facebook"></i>Facebook
              </button>
            </div>
          </form>
        </section>
      </main>
      <%- include('../partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
          crossorigin="anonymous"></script>
  </body>

</html>