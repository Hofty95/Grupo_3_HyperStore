<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <!-- Header -->
    <%- include('../partials/header') %>
      <!-- MAIN -->
      <main class="main__user">
        <section class="main__section__user">
          <article class="main__article__user__datos">
            <form action="/user/edit/<%= userLogin.id %>?_method=PUT" method="post">
              <div class="main__article__user__menu">
                <h2>
                  <%= user.name %>
                </h2>
                <section class="profile__data">
                  <div class="relative block">
                    <img alt="profil" src="/images/user.png" class="mx-auto object-cover rounded-full h-20 w-20 " />
                  </div>
                  <label class="block" for="">
                    <input class="block w-full text-sm text-slate-500
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-full file:border-0
                    file:text-sm file:font-semibold
                    file:bg-violet-50 file:text-violet-700
                    hover:file:bg-violet-100" type="file">
                  </label>
                </section>
                <h2>
                  <%= user.email %>
                </h2>
              </div>
              <h2>Mis Datos</h2>

              <div class="input__group__general">
                <label for="name"><small style="color: white;">Nombre</small></label>
                <input id="name" name="name" class="input__general" type="text"
                  value="<%= user.name ? user.name : 'Coloque su nombre' %>" />
                <small style="color:red">
                  <%= locals.errors && errors.user.name ? errors.user.name.msg : null %>
                </small>
              </div>

              <div class="input__group__general">
                <label for="surname"><small style="color: white;">Apellido</small></label>
                <input id="surname" name="surname" class="input__general" type="text"
                  value="<%= user.surname ? user.surname : 'Coloque su Apellido' %>" />
                <small style="color:red">
                  <%= locals.errors && errors.user.surname ? errors.user.surname.msg : null %>
                </small>
              </div>

              <h2>Mis Direcciones</h2>

              <div class="input__group__general">
                <label for="street"><small style="color: white;">Calle</small></label>
                <input id="street" name="street" class="input__general" type="text"
                  value="<%= user.address.street ? user.address.street : 'Coloque su calle' %>" />
                <small style="color:red">
                  <%= locals.errors && errors.user.address.street ? errors.user.address.street.msg : null %>
                </small>
              </div>

              <div class="input__group__general">
                <label for="postcode"><small style="color: white;">Código postal</small></label>
                <input id="postcode" name="postcode" class="input__general" type="number"
                  value="<%= user.address.postcode ? user.address.postcode : 'Coloque su código postal' %>" />
                <small style="color:red">
                  <%= locals.errors && errors.user.address.postcode ? errors.user.address.postcode.msg : null %>
                </small>
              </div>

              <div class="input__group__general">
                <label for="province"><small style="color: white;">Ciudad</small></label>
                <input id="province" name="province" class="input__general" type="text"
                  value="<%= user.address.province ? user.address.province : 'Coloque su ciudad' %>" />
                <small style="color:red">
                  <%= locals.errors && errors.user.address.province ? errors.user.address.province.msg : null %>
                </small>
              </div>

              <div class="input__group__general">
                <label for="location"><small style="color: white;">Localidad</small></label>
                <input id="location" name="location" class="input__general" type="text"
                  value="<%= user.address.location ? user.address.location : 'Coloque su localidad' %>" />
                <small style="color:red">
                  <%= locals.errors && errors.user.address.location ? errors.user.address.location.msg : null %>
                </small>
              </div>

              <button class="boton__general">Guardar</button>
            </form>
          </article>
        </section>
      </main>
      <!-- Footer -->
      <%- include('../partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
          crossorigin="anonymous"></script>
        <script src="/javascripts/user.js" type="text/javascript"></script>
        <!-- TAILWIND -->
        <script src="https://cdn.tailwindcss.com"></script>
  </body>

</html>